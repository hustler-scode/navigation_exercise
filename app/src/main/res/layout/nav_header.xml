<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#3F51B5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:text="Your Highness"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" android:layout_height="200dip" android:layout_width="200dip"/>

    <TextView
        android:text="android@example.com"
        android:textColor="#FFFFFF"
        android:textSize="14sp" android:layout_height="200dip" android:layout_width="200dip"/>
</LinearLayout>
